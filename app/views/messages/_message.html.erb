<div class="message">
  <div class="message_up">
    <div class="message_name">
        <%= message.user.name %>
    </div>
    <div class="message_date">
        <%= message.created_at %>
    </div>
  </div>
  <div class="message_down">
    <div class="message_text">
        <%= message.content %>
    </div>
  </div>
</div>
